<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Медицинская клиника - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            background-color: #2c3e50;
            min-height: 100vh;
            color: white;
        }
        .sidebar .nav-link {
            color: #ecf0f1;
            padding: 15px 20px;
            border-bottom: 1px solid #34495e;
        }
        .sidebar .nav-link:hover {
            background-color: #34495e;
            color: #3498db;
        }
        .sidebar .nav-link.active {
            background-color: #3498db;
            color: white;
        }
        .main-content {
            background-color: #ecf0f1;
            min-height: 100vh;
        }
        .stat-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar p-0">
                <div class="p-3 text-center">
                    <h4><i class="fas fa-hospital-alt"></i> Медицинская клиника</h4>
                </div>
                <nav class="nav flex-column">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">
                        <i class="fas fa-tachometer-alt"></i> Дашборд
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" ? "active" : "")"
                       asp-controller="Patients" asp-action="Index">
                        <i class="fas fa-user-injured"></i> Пациенты
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Appointment" ? "active" : "")"
                       asp-controller="Appointments" asp-action="Index">
                        <i class="fas fa-calendar-check"></i> Записи на прием
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "MedicalCase" ? "active" : "")"
                       asp-controller="MedicalCases" asp-action="Index">
                        <i class="fas fa-file-medical"></i> Медицинские случаи
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Treatments" ? "active" : "")"
                       asp-controller="Treatments" asp-action="Index">
                        <i class="fas fa-microscope"></i> Лечение
                    </a>
                </nav>
            </div>

            <!-- Main content -->
            <div class="col-md-10 main-content p-0">
                <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
                    <div class="container-fluid">
                        <span class="navbar-brand">@ViewData["Title"]</span>
                        <div class="navbar-nav ms-auto">
                            <span class="navbar-text">
                                <i class="fas fa-user-md"></i> Врач: Дмитрий Иванов
                            </span>
                        </div>
                    </div>
                </nav>

                <div class="container-fluid p-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>